@model List<MyMongoDbProject.Dtos.ResultCustomerDto>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>müşteri adı soyadı</th>
            <th>bakiye</th>
            <th>sil</th>
            <th>güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerId</td>
                <td>@item.CustomerName @item.CustomerSurname</td>
                <td>@item.CustomerBalance</td>
                <td><a href="/Customer/DeleteCustomer/@item.CustomerId" class="btn btn-danger"> sil </a></td>
                <td><a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-danger">güncelle</a></td>
            </tr>
        }
        </table>
        <a href="/Customer/CreateCustomer" class="btn btn-primary"> yeni müşteri girişi</a>

</div>

